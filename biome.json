{
	"$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 80
	},
	"linter": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"semicolons": "always"
		}
	},
	"files": {
		"includes": ["**", "!**/dist/", "!**/node_modules/", "!**/*.test.ts"]
	}
}
